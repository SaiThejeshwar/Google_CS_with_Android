<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.andrewpmsmith.movabletype"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:icon="@drawable/game_icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:allowBackup="true">
        <activity
            android:name="com.andrewpmsmith.movabletype.ui.GameActivity"
            android:label="@string/title_activity_launch_screen"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.andrewpmsmith.movabletype.ui.DashboardActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.andrewpmsmith.movabletype.ui.InstructionsActivity"
            android:label="@string/title_activity_instructions" >
        </activity>
    </application>

</manifest>